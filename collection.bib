month = may,
number = {10},
pages = {2463--2474},
title = {{Investigating the origins of triploblasty: 'mesodermal' gene expression in a diploblastic animal, the sea anemone Nematostella vectensis (phylum, Cnidaria; class, Anthozoa)}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/15128674},
